# SwiftFormat Configuration File
# Place this file in your project root directory

# MARK: - Indentation & Spacing
--indent 4
--tabwidth 4
--smarttabs enabled
--maxwidth 120

# MARK: - Line Breaks & Whitespace  
--linebreaks lf
--trimwhitespace always
--insertlines enabled
--removelines enabled

# MARK: - Braces & Brackets
--allman false
--wraparguments preserve
--wrapparameters preserve
--wrapcollections preserve
--closingparen balanced
--wrapreturntype preserve
--wrapeffects preserve

# MARK: - Imports
--importgrouping testable-bottom
--testableimports alphabetized

# MARK: - Comments & Documentation
--doccomments preserve
--stripunusedargs closure-only

# MARK: - Control Flow
--elseposition same-line
--guardelse auto
--ifdef no-indent

# MARK: - Functions & Closures
--trailingclosures
--nospaceoperators ...,..<
--operatorfunc spaced
--ranges spaced

# MARK: - Types & Generics
--shortoptionals always
--redundanttype inferred
--explicitself remove
--selfrequired 

# MARK: - SwiftUI Specific
--swiftversion 5.5

